object ToricVariety {

   user_method ext(TDivisor, TDivisor){
      my $tv = @_[0];
      my $D1 = @_[1];
      my $D2 = @_[2];
      print $D1->COEFFICIENTS," - ",$D2->COEFFICIENTS,"\n";
      my $tvc = new Polytope(POINTS=>unit_vector($tv->AMBIENT_DIM+1,0)/(zero_vector($tv->RAYS->rows)|$tv->RAYS));
      print $tvc->VERTICES;

   }


}


	
