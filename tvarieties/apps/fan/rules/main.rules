sub unique {
	my (@cones) = @_;
	my @result = ();
	my $n = @cones;
	while($n>0){
		my $c = pop @cones;
		@cones = grep(!equal_polyhedra($c, $_), @cones);
		push @result, $c;
		$n = @cones;
	}
	return @result;
}

